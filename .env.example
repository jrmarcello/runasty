# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Strava OAuth (https://www.strava.com/settings/api)
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret

# Strava Webhook (para sync automático)
# Gere um token aleatório: openssl rand -hex 32
STRAVA_WEBHOOK_VERIFY_TOKEN=your_random_verify_token

# NextAuth (gerar com: npx auth secret)
AUTH_SECRET=your_auth_secret_here

# App URL (para callbacks do OAuth)
NEXTAUTH_URL=http://localhost:3000

# Doações PIX (opcional)
NEXT_PUBLIC_PIX_KEY=sua_chave_pix
NEXT_PUBLIC_PIX_QRCODE=codigo_copia_e_cola_do_qrcode
NEXT_PUBLIC_PIX_NAME=Seu Nome

# GitHub (para issues)
NEXT_PUBLIC_GITHUB_REPO=jrmarcello/runasty

# Sentry - Error Tracking (opcional)
# Crie uma conta gratuita em https://sentry.io
# O DSN é encontrado em: Settings > Projects > [seu projeto] > Client Keys
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
